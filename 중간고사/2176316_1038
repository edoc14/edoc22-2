#include <queue>
#include <iostream>
using namespace std;

int main() {
  int num;
  cin >> num;
  
  if (num >= 1023) { cout << -1; return 0; }
  if (num < 10) { cout << num; return 0; }
  int cnt = 9;
  queue <long long> q;
  for (int i = 0; i < 10; i ++) { q.push(i); }
  
  while(1) {
    long long enq = q.front();
    q.pop();
    long long last = enq%10;
    for (int i = 0; i < last; i++) {
      long long nn = enq*10 + i;
      cnt++;
      q.push(nn);
      if( cnt == num) {
        cout << nn;
        return 0;
        }
     }
  }
  return 0;
  }
