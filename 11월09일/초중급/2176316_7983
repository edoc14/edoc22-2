#include <iostream>
#include <algorithm>
#include <vector>

using namespace std;
int n;
vector<pair<int, int>> arr;

bool cmp(pair<int, int> p, pair<int, int> q) {
    return p.second>q.second;
}

int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(0);
    cin >> n;
    for(int i=0 ; i<n ; i++) {
        int p, q;
        cin >> p >> q;
        arr.push_back({p, q});
    }

    sort(arr.begin(), arr.end(), cmp);
    int now=arr[0].second-arr[0].first;
    for(int i=1 ; i<n ; i++) {
        int f=arr[i].first, s=arr[i].second;
        if(now>=s) {
            now = s-f;
        } else {
            now = now-f;
        }
    }
    cout << now;
    
    return 0;
}
